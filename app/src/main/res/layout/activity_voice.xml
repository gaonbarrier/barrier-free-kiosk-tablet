<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".VoiceActivity">



    <com.google.android.material.tabs.TabLayout
            android:layout_weight="1"
            android:id="@+id/voice_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="center"
            app:tabMode="scrollable"
            app:tabTextColor="#808080"
            app:tabSelectedTextColor="#723838"
            app:tabIndicatorColor="#723838"
            app:tabTextAppearance="@style/tab_text"
    />


    <androidx.viewpager.widget.ViewPager
            android:layout_weight="8"
            android:id="@+id/voice_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:padding="2dp"
                android:layout_weight="5"

                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/voice_cartButton"/>
        <!-- android:background="@drawable/result_outline" -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">
            <Button
                    android:padding="2dp"
                    android:layout_weight="5"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/voice_resultButton"/>
            <!-- android:background="@drawable/result_outline" -->
            <Button
                    android:padding="2dp"
                    android:layout_weight="5"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/voice_cancelButton"/>
            <!-- android:background="@drawable/result_outline" -->
        </LinearLayout>

    </LinearLayout>


</LinearLayout>